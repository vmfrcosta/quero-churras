<div class="card-category rounded-0" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
	url(https://envato-shoebox-0.imgix.net/bbd1/dd3a-f091-4d67-a3bb-3ff1b6665de1/man_grilling_pork_chops_112308.jpg?auto=compress%2Cformat&fit=max&mark=https%3A%2F%2Felements-assets.envato.com%2Fstatic%2Fwatermark2.png&markalign=center%2Cmiddle&markalpha=18&w=1600&s=bcb3dc991f2ae1685d6c605634a0165b)">
  <h1 class="container"><strong><%= @grill.name %></strong></h1>
</div>

<div class="container grill mt-3">
		<div class="grill-description border-bottom">
			<h3><strong><%= @grill.address %></strong> </h3>

			<div class="description d-flex justify-content-between">
				<p class="text-black-50"><%= @grill.description %></p>	
			</div>

			<div class="type d-flex justify-content-between">
				<p>Type:</p>				<p><%= @grill.grills_type %></p>	
			</div>
			<div class="price d-flex justify-content-between">
				<p>Price:</p>
				<p id="price"><%= @grill.price %></p>	
			</div>
		</div>

		<div class="offset-md-1 d-flex flex-column align-items-left">
			<h3>Liked the grill? Book it now!</h3>
			<%= render 'calendar' %>
		</div>

	</div>

  <div class="container">
	  <div class="review">
	    <%= render 'reviews/index' %>
	  </div>
	</div>

	<div class="container">
	  <div class="review">
	    <%= render 'reviews/modal' %>
	  </div>
	</div>

  <div
    id="map"
    style="width: 100%;
    height: 400px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV["MAPBOX_API_KEY"] %>">
  </div>

<div class="container">
	<div class="review">
		<%= render 'reviews/modal' %>
	</div>
</div>

<div class="container">
	<div class="booking">
		<%= render 'bookings/modal' %>
	</div>
</div>



<div class="container">
<h1>All Grills</h1>
<p>
</p>
  <div class="row">
    <% @grills.each do |grill| %>
      <div class="col-xs-12 col-md-4">
        <h2> <%= grill.name %> </h2>
        <h4> <%= grill.grills_type %> | <%= grill.address %> </h4>
        <%= link_to "Edit |", edit_grill_path(grill) if current_user == grill.user %>
        <%= link_to "Delete |", grill_path(grill), method: :delete if current_user == grill.user%>
        <%= link_to "Show", grill_path(grill) %>
      </div>
    <% end %>
  </div>
</div>
<p></p>
  <div class="container">
<p>
<%= link_to "Add a new grill", new_grill_path(@grill), class: "btn btn-primary"%>
</p>

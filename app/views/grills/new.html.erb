
<div class="container">
  <div class="row">
      <%= simple_form_for(@grill) do |f| %>
        <%= f.error_notification %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :grills_type %>
        <%= f.input :address %>
        <%= f.input :price %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

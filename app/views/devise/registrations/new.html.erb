<div class="bg">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-sm-12 offset-md-3 col-md-6 text-primary">
        <h2 class="mt-5 pt-5 mb-3"><strong>Sign up</strong></h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, label_html: { class: 'font-weight-bolder ml-4'},
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "rounded-pill pl-4 border-0" }%>
            <%= f.input :password, label_html: { class: 'font-weight-bolder ml-4'},
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class: "rounded-pill pl-4 border-0" } %>
            <%= f.input :password_confirmation, label_html: { class: 'font-weight-bolder ml-4'},
                        required: true,
                        input_html: { autocomplete: "new-password", class: "rounded-pill pl-4 border-0" } %>
            <%= f.input :photo, label_html: { class: 'font-weight-bolder ml-4'},
                        input_html: { class: "pl-4" } %> 
            <%= f.input :photo_cache, as: :hidden %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" , class: "btn-secondary btn-block rounded-pill py-2 mt-5" %>
          </div>
        <% end %>

        <div class="row" style="height: 15vh">
          <div class="col-sm-12 offset-md-2 col-md-8 d-flex justify-content-center align-self-end text-secondary">
            <%- if controller_name != 'sessions' %>
              <p class="mr-2 font-weight-lighter">JÃ¡ tem conta? </p>
              <%= link_to "Log in", new_session_path(resource_name), :class => 'font-weight-bolder text-secondary' %><br />
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>



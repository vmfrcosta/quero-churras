<div class="container">
  <div class="text-primary">
    <div class="cards">
        <% @grills.each do |grill| %>

          <div class="card-trip m-2">

            <%= link_to grill_path(grill), class:"btn" do %>
              <img src="http://centerbox.com.br/wp-content/uploads/2018/06/210160-churrasco-guia-de-como-temperar-a-carne-como-um-profissional.jpg"/>
            <% end %>
            <div class="card-trip-infos">
              <div>
                <h4 class="card-title"><%= grill.name %> </h4>
                <p class="card-text"><%= grill.address %> </p>
                <p class="card-text"><%= grill.distance_from(@coordinates).round(1) %> km </p>
              </div>
              <h2 class="card-trip-pricing">R$ <%= grill.price %></h2>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered"/>
            </div>

          </div>
        <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
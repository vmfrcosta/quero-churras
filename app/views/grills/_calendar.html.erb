<div class="mt-3 d-flex flex-column align-items-center">
    <div class="container">
      	<div class="form-wrapper" style="width: 300px; margin: 0 auto;">
	        <%= simple_form_for [@grill, @booking] do |f| %>
	          <%= f.input :check_in, as: :string, id: 'check-in', required: false, input_html: {class: "datepicker"} %>
	          <%= f.input :check_out, as: :string, id: 'check-out', required: false, input_html: {class: "datepicker"} %>
	          <%= f.input :address , as: :string, id: 'address' %>
	          <%= f.button :submit, "Reservar", class: "btn btn-primary", data: { toggle: 'modal', target: '#bookingModal' }, id: 'submit-booking' %>
	        <% end %>
    	</div>
	</div>
</div>